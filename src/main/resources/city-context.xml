<?xml version="1.0" encoding="UTF-8"?>
<beans  xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="electricitySystem" class="org.example.city.ElectricitySystem"/>
    <bean id="pipelineSystem" class="org.example.city.PipelineSystem"/>
    <bean id="industrialDistrict" class="org.example.city.IndustrialDistrict"/>

    <bean id="city" class="org.example.city.City">
        <constructor-arg ref="electricitySystem"/>
        <constructor-arg ref="pipelineSystem"/>
        <constructor-arg ref="industrialDistrict"/>
    </bean>
</beans>